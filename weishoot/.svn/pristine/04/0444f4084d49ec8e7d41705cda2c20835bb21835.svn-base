<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/iv_com_head"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dip"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/tv_com_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@+id/iv_com_head"
        android:text="老黄牛"
        android:textColor="@color/textview_blue"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/tv_com_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_com_name"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/btn_guanzhu"
        android:layout_toRightOf="@+id/iv_com_head"
        android:text="周围的气候终年寒周围的气候终年周围的气候终年周围的气候终年冷。"
        android:textColor="@color/black"
        android:textSize="14dip" />

    <Button
        android:id="@+id/btn_guanzhu"
        android:layout_width="85dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/icon_gz_g" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_com_content"
        android:layout_marginTop="8dip"
        android:background="@color/line_gray" />

</RelativeLayout>