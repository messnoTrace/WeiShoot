<?xml version="1.0" encoding="utf-8"?>
<com.NationalPhotograpy.weishoot.view.InputMethodLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_method_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/title_bg_blue" >

            <LinearLayout
                android:id="@+id/layout_back"
                android:layout_width="60dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="11dip"
                    android:layout_height="22dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="18dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发表评论"
                android:textColor="@color/white"
                android:textSize="20dip" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="18dip" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="fill_parent"
            android:layout_height="170dip"
            android:layout_margin="10dip"
            android:background="@null"
            android:gravity="left"
            android:hint="写评论......"
            android:maxLines="7"
            android:textColor="@color/textview_black"
            android:textColorHint="@color/textview_gray_dark"
            android:textCursorDrawable="@null"
            android:textSize="17dip" />
    </LinearLayout>

    <com.NationalPhotograpy.weishoot.view.HorizontalListView
        android:id="@+id/lv_biaoqing"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@color/find_gray" />

</com.NationalPhotograpy.weishoot.view.InputMethodLayout>