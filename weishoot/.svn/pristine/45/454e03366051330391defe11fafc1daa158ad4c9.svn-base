<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="30dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_wechart"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_share_wechart" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_friends"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_share_friends" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_sina"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_share_sina" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="微信"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="朋友圈"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="新浪微博"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_qq"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_share_qq" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_qzone"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_share_qzone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1" >
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="QQ"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="QQ空间"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/textview_black"
                    android:textSize="16dip" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dip" />
    </LinearLayout>

</LinearLayout>