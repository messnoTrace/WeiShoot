<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="11dip"
                android:layout_height="22dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="18dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:background="@drawable/default_head"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btn_gz"
            android:layout_width="55dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_gz_g" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_setting" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textColor="@color/white"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_below="@+id/iv_head"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:layout_toRightOf="@+id/tv_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_gxqm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="11dip" />

            <ImageView
                android:id="@+id/img_gxqm"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dip"
                android:scaleType="centerInside"
                android:src="@drawable/icon_gxqm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="14dip" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#FAFAFA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zy"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_yp"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="影片"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_fm"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="封面"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_sc"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_td"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="态度"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_wdzl"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/view_zy"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@color/textview_orange" />

                <View
                    android:id="@+id/view_yp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_fm"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_sc"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_td"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_wdzl"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>