<?xml version="1.0" encoding="utf-8"?>
<com.NationalPhotograpy.weishoot.view.pageindicator.ExcellentSectionTabs
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/trade_rl"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/trade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/third_registered_tab_text_color"
                    android:gravity="center"
                    android:text="注册一个新账号"
                    android:duplicateParentState="true"
                    android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/browse_rl"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/browse_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/third_registered_tab_text_color"
                    android:gravity="center"
                    android:text="绑定已有账号"
                    android:textSize="15sp"
                    android:duplicateParentState="true"/>
        </RelativeLayout>
       
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_divider_bg"
            android:layout_alignParentBottom="true"/>

    <com.NationalPhotograpy.weishoot.view.pageindicator.UnderLineIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
</com.NationalPhotograpy.weishoot.view.pageindicator.ExcellentSectionTabs>
