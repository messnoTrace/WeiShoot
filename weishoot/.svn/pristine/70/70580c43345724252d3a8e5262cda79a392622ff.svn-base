<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/title_bg_blue" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="10dip"
            android:layout_height="18dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/btn_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_left"
            android:text="账户"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="20dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_wushi"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/icon_check"
            android:gravity="center"
            android:text="50元"
            android:textColor="#d99561"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_yibai"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:text="100元"
            android:textColor="#d99561"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_erbai"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:text="200元"
            android:textColor="#d99561"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_sanbai"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:text="300元"
            android:textColor="#d99561"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_wubai"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:text="500元"
            android:textColor="#d99561"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:text="其它金额"
            android:textColor="#d99561"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:hint="其它金额"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#d99561"
                android:textColorHint="#d99561"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="支付"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>