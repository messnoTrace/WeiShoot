<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="145dip"
        android:layout_height="137dip"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_onrefresh"
            android:layout_width="140dip"
            android:layout_height="45dip"
            android:background="#848D99"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/webview_refresh" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="刷新"
                android:textColor="@color/white"
                android:textSize="16dip" />

            <View
                android:layout_width="5dip"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/layout_webview"
            android:layout_width="140dip"
            android:layout_height="45dip"
            android:background="#848D99"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:background="@drawable/webview_web" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="在网页中打开"
                android:textColor="@color/white"
                android:textSize="16dip" />

            <View
                android:layout_width="5dip"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="140dip"
            android:layout_height="45dip"
            android:background="#848D99"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:background="@drawable/webview_share" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="16dip" />

            <View
                android:layout_width="5dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>