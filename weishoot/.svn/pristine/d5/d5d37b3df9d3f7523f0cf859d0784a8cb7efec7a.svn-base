<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.NationalPhotograpy.weishoot.view.pullzoomlistview.MyPullZoomListView
        xmlns:leju="http://schemas.android.com/apk/res-auto/com.handmark.pulltorefresh.library"
        android:id="@+id/my_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        leju:ptrMode="pullUpFromBottom" />

    <LinearLayout
        android:id="@+id/layout_tab_hide"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#FAFAFA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zy_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_yp_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="影片"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_fm_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="封面"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_sc_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_td_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="态度"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_wdzl_hide"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/textview_gray_dark"
                android:textSize="14dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/view_zy_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@color/textview_orange" />

                <View
                    android:id="@+id/view_yp_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_fm_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_sc_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_td_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/view_wdzl_hide"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp" 
        android:visibility="gone"/>

</RelativeLayout>