<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="51dip"
                android:layout_height="51dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/default_head"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:layout_toLeftOf="@+id/tv_time"
                android:layout_toRightOf="@+id/iv_head"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大河"
                android:textColor="@color/textview_blue"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/iv_head"
                android:text="来自于Android客户端"
                android:textColor="@color/textview_gray"
                android:textSize="11dip" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:text="昨天 21:42"
                android:textColor="@color/textview_gray"
                android:textSize="11dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:text="北极地区的气候，终年寒冷。北冰洋是一片浩瀚的冰封海洋，周围是众多的岛屿以及北美洲和亚洲北部的沿海地区。"
            android:textColor="@color/textview_gray_dark"
            android:textSize="16dip" />

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="14.75dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:background="@drawable/icon_address" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/iv_01"
                android:gravity="center_vertical"
                android:maxWidth="150dip"
                android:singleLine="true"
                android:text="加拿大加拿大加拿大加拿大加拿大加拿大加拿大加拿大加拿大加拿大"
                android:textColor="@color/textview_orange"
                android:textSize="15dip" />

            <View
                android:layout_width="1px"
                android:layout_height="40dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/tv_address"
                android:background="@color/line_gray_dark" />

            <TextView
                android:id="@+id/tv_addressNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="25dip"
                android:layout_toRightOf="@+id/tv_address"
                android:gravity="center"
                android:singleLine="true"
                android:text="N39.9℃,E116.2"
                android:textColor="#EE8026"
                android:textSize="15dip" />

            <ImageView
                android:id="@+id/iv05"
                android:layout_width="14.56dip"
                android:layout_height="22dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/icon_right" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/mark" />

            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="北京生灵"
                android:textColor="#838383"
                android:textSize="16dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip" >

            <LinearLayout
                android:id="@+id/layout_zan"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_zan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_zan_selector"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="赞"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/layout_zan"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_comment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_comment_selector"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="评论"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/layout_btn_comment"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_shoucang"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_shoucang_selector"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="收藏"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/layout_shoucang"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/delete"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="删除"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_report"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/layout_shoucang"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_report"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/report"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="举报"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="#000000"
                    android:textSize="16dip" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_my_head"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/layout_headImage"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/iv_headNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="#F8F8F8"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="108"
                android:textColor="#000000" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_allComment"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@color/transparent"
            android:text="查看全部200条评论"
            android:textColor="@color/textview_gray"
            android:textSize="16dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#E5E5E5" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:background="#FAFAFA" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#E5E5E5" />
    </LinearLayout>

    <View
        android:id="@+id/view_gray"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_gray" />

</FrameLayout>