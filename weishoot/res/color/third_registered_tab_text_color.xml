<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false"
          android:state_pressed="false" android:color="@color/gray_160" />
    <item android:state_focused="false" android:state_selected="true"
          android:state_pressed="false" android:color="@color/complete_user_info_tip" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false"
          android:state_pressed="false" android:color="@color/complete_user_info_tip" />
    <item android:state_focused="true" android:state_selected="true"
          android:state_pressed="false" android:color="@color/complete_user_info_tip" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:color="@color/complete_user_info_tip" />
</selector>