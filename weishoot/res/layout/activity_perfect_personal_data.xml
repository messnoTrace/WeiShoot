<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg_blue" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完善个人资料"
            android:textColor="@color/white"
            android:textSize="20dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/ibtn_edit_head"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ibtn_head_setting" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/reg_edittext" >

        <LinearLayout
            android:id="@+id/layout_username"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/edt_img_username" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#000000"
                android:textColorHint="@color/textview_gray"
                android:textCursorDrawable="@null"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/layout_username"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/select_sex" />

            <TextView
                android:id="@+id/tv_user_sex"
                android:layout_width="100dip"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="请选择性别"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/ibtn_sex_man"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="15dp"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/select_sex_man" />

            <ImageButton
                android:id="@+id/ibtn_sex_woman"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/select_sex_woman" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_registered"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>