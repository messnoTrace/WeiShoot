<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:textColor="#787878"
            android:textSize="22dp" />

        <View
            android:id="@+id/dialog_btn_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dialog_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/dialog_lv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:visibility="gone" />

            <View
                android:id="@+id/dialog_lv_divider1"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dialog_divider"
                android:visibility="gone" />

            <ListView
                android:id="@+id/dialog_lv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:visibility="gone" />

            <View
                android:id="@+id/dialog_lv_divider2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dialog_divider"
                android:visibility="gone" />

            <ListView
                android:id="@+id/dialog_lv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>